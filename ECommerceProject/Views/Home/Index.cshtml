@using ECommerceProject.Models;
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<ProductTypes>
@{
    ViewData["Title"] = "Home Page";
}
<br /><br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    @*<h4 class="my-0 font-weight-normal">
                            <label style="font-size: 23px;color: steelblue">@product.ProductTypes.ProductType</label>
                        </h4>*@
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px;color: steelblue">@product.ProductType</label>
                    </h4>
                </div>
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Product" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success pull-right">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c), PagedListRenderOptionsBase.PageNumbersOnly)
</div>
